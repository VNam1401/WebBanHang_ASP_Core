﻿@model List<Product>

<div class="row">
    <div id="category-list" class="col-md-3">
        <h3>CATEGORY LIST</h3>
        <ul class="list-group">
            @foreach (var c in (List < CategoryNew)ViewBag.DSTHELOAI)
            {
                <a asp-action="Index" asp-route-catid="@c.Id" class="list-group-item list-group-item-primary d-flex justify-content-between align-items-center">
                    @c.Name
                    <span class="badge bg-primary rounded-pill">@c.TotalProduct</span>
                </a>
            }
        </ul>
    </div>
    <div id="product-list" class="col-md-9">
        <div class="row">
            @foreach (var p in Model)
            {
                <div class="card mb-3 col md-3">
                    <h3 class="card-header">@p.Name</h3>
                    <div class="card-body">
                        <h5 class="card-title">Price: @string.Format("{0:#,#00}",p.Price)</h5>
                    </div>
                    @if (!string.IsNullOrEmpty(p.ImageUrl))
                    {
                        <img src="/@p.ImageUrl" class="img-fluid" />
                    }
                     else
                        {
                            <div class="text-center py-3">
                                <span class="text-muted">No image available</span>
                            </div>
                        }
                    <div class="card-footer text-muted">
                        <a href="#" class="card-link btn btn-outline-dark">Detail</a>
                        <a href="#" class="card-link btn btn-outline-info">Add To Cart</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
