@model List<Product>

<div class="row">
    <div id="category-list" class="col-md-3">
        <h3>CATEGORY LIST</h3>
        <ul class="list-group">
            @foreach (var c in (List<CategoryNew>)ViewBag.DSLOAI)
            {
                <a asp-action="Index" asp-route-catid="@c.Id"class="list-group-item list-group-item-primary d-flex justify-content-between align-items-center">@c.Name
                    <span
                           class="badge bg-primary rounded-pill">@c.TotalProduct
                    </span>
                    </a>
             }
        </ul>
    </div>

    <div id="product-list" class="col-md-9">
        <h3 class="text-uppercase">PRODUCT LIST OF @ViewBag.CATEGORY_NAME</h3>
        <div class="row">
            @foreach (var p in Model)
            {
                <div class="col-md-4 mb-4">
        <h5 class="card-header">@p.Name</h5>
        <div class="card-body">
            <h6 class="card-title">Price: @string.Format("{0:#,#00} USD", p.Price)</h6>
        </div>

        @if (!string.IsNullOrEmpty(p.ImageUrl))
        {
            <img src="/@p.ImageUrl" class="img-fluid" />
            }
                else
                {
                    <div class="text-center py-3">
                   <span class="text-muted">No image available</span>
                    </div>
                    }

        <div class="card-footer text-muted d-flex justify-content-between">
            <a href="#" class="btn btn-outline-dark btn-sm">Detail</a>
            <a href="#" class="btn btn-outline-info btn-sm">Add To Cart</a>
        </div>
    </div>
    }
        </div>
    </div>
</div>
